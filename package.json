{
  "name": "mongoose-lean-virtuals-v2",
  "version": "0.6.1",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha ./test/*.js"
  },
  "dependencies": {
    "mpath": "0.5.x"
  },
  "devDependencies": {
    "acquit": "1.x",
    "acquit-ignore": "0.1.0",
    "acquit-markdown": "0.1.0",
    "co": "4.6.0",
    "eslint": "6.8.0",
    "istanbul": "0.4.5",
    "mocha": "5.2.x",
    "mongoose": "5.x"
  },
  "peerDependencies": {
    "mongoose": ">=4.11.0 || 5.x"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2015
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "consistent-this": [
        "error",
        "_this"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "keyword-spacing": "error",
      "no-buffer-constructor": "warn",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "warn",
      "prefer-const": "warn",
      "strict": [
        "error",
        "global"
      ],
      "no-restricted-globals": [
        "error",
        {
          "name": "context",
          "message": "Don't use Mocha's global context"
        }
      ]
    }
  }
}